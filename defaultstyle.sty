%% Colors
\includepackage[usenames,dvipsnames]{xcolor}

%% Code
\includepackage{listings}
\lstset{%
  basicstyle=\tt\small,
  keywordstyle=\ttfamily\bfseries\small,
  columns=flexible,
  tabsize=2,
  showstringspaces=true,
  %numbers=left,
  numberstyle=\tiny\ttfamily\color{Gray},
  commentstyle=\ttfamily\color{Gray}
}
\newcommand{\code}[2][]{\lstinline[#1]{#2}}

%% Tables
\includepackage{booktabs}

%% Links
\includepackage{hyperref}
\hypersetup{%
  unicode=true,
  hidelinks
}

%% Bibliography
\includepackage[square,numbers]{natbib}

